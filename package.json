{
    "name": "ignore",
    "displayName": "language-ignore",
    "description": "Syntax highlighting for 'ignore' files : gitignore, npmignore, dockerignore, coffeelintignore, ...",
    "version": "0.0.1",
    "publisher": "ldez",
    "engines": {
        "vscode": "^1.0.0"
    },
    "categories": [
        "Languages"
    ],
    "contributes": {
        "languages": [{
            "id": "ignore",
            "aliases": ["Ignore File (gitignore syntax)", "ignore"],
            "extensions": [".gitignore",".npmignore",".coffeelintignore",".dockerignore",".atomignore",".vscodeignore"],
            "configuration": "./ignore.configuration.json"
        },{
            "id": "ignore-slug",
            "aliases": ["Ignore File for Slug compiler", "ignore-slug"],
            "extensions": [".slugignore"],
            "configuration": "./ignore.configuration.json"
        },{
            "id": "ignore-hgignore",
            "aliases": ["Ignore File for Mecurial", "ignore-hg"],
            "extensions": [".hgignore"],
            "configuration": "./ignore.configuration.json"
        }],
        "grammars": [{
            "language": "ignore",
            "scopeName": "text.ignore",
            "path": "./syntaxes/ignore.json"
        },{
            "language": "ignore-slug",
            "scopeName": "text.ignore.slugignore",
            "path": "./syntaxes/ignore-slug.json"
        },{
            "language": "ignore-hgignore",
            "scopeName": "text.ignore.hgignore",
            "path": "./syntaxes/ignore-mercurial.json"
        }]
    }
}